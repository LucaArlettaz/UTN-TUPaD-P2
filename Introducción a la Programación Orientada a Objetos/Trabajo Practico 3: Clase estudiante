public class Estudiante {
    String nombre;
    String apellido;
    String curso;
    double calificacion;
    
    void mostrarInfo() {
        System.out.println("Nombre completo: " + nombre + " " + apellido);
        System.out.println("Curso: " + curso);
        System.out.println("Calificacion: " + calificacion);
    }
    
    void subirCalificacion(double puntos) {
        calificacion = calificacion + puntos;
        System.out.println("La calificacion subio " + puntos + " puntos.");
    }
    
    void bajarCalificacion(double puntos) {
        calificacion = calificacion - puntos;
        if (calificacion < 0) {
            calificacion = 0;
        }
        System.out.println("La calificacion bajo " + puntos + " puntos.");
    }
}
