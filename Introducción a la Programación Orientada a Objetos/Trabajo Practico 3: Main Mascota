public class Principal {

    public static void main(String[] args) {
        Mascota mascota1 = new Mascota();
        mascota1.nombre = "Shaka";
        mascota1.especie = "Perro";
        mascota1.edad = 12;
        
        mascota1.mostrarInfo();
        
        mascota1.cumplirAnios();
        mascota1.mostrarInfo();
        
        mascota1.cumplirAnios();
        mascota1.mostrarInfo();
        
    }
}
